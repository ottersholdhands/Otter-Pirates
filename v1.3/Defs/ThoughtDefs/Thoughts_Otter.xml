   <ThoughtDef>
    <defName>OtterKnowColonistDied</defName>
    <durationDays>6</durationDays>
    <stackLimit>5</stackLimit>
    <nullifyingTraits>
      <li>Psychopath</li>
      <li>Bloodlust</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>colonist died</label>
