  <ThingDef ParentName="ApparelMakeableBaseOtter">
    <defName>Apparel_PirateEyepatch</defName>
    <label>Eyepatch</label>
    <description>Eyepatches, while not strictly neccessary, are very stylish, and certainly piratical. It is not uncommon for an Otter to have several eyepatches in varying styles.</description>
     <techLevel>Medieval</techLevel>
         <recipeMaker>
      <recipeUsers Inherit="False">
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
        <li>CraftingSpot</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
      <researchPrerequisite>OtterClothing</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Item/Apparel/Otterhats/OtterPiratepatch</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.8, 0.8)</drawSize>
    </graphicData>
    <costStuffCount>30</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
<thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
    <thingCategories>
        <li>Headgear</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>800</WorkToMake>
      <Mass>0.5</Mass>
      <StuffEffectMultiplierArmor>0.3</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.3</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.5</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>.5</EquipDelay>
    </statBases>
     <equippedStatOffsets>
     <SocialImpact>0.05</SocialImpact>
     <ShootingAccuracyPawn>1</ShootingAccuracyPawn>
     </equippedStatOffsets>
     <apparel>
     <bodyPartGroups>
         <li>UpperHead</li>
      </bodyPartGroups>
      <useWornGraphicMask>True</useWornGraphicMask>
      <wornGraphicPath>Things/Item/Apparel/Otterhats/OtterPiratepatch</wornGraphicPath>
     <layers>
       <li>Overhead</li>
      </layers>
      <tags Inherit="False">
        <li>OtterPirate</li>
        <li>MedievalMilitary</li>
      </tags>
      <defaultOutfitTags>
        <li>OtterOutfit</li>
      </defaultOutfitTags>
      </apparel>
        <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>

